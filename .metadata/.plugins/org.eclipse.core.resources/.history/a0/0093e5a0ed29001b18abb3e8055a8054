
public class qwe {

	public static void main(String[] args) {
		String str = "he llow";
		String str2="";
		
		for(int i = 0 ; i < str.length() ; i ++) {
			if(str.charAt(i) == ' ') {
				
				str2 += str.substring(i+1,i+2);
			}else {
				str2 += str.substring(i,i+1);
			}
			
			
		}
		System.out.println(str2);
		System.out.println(str2.length());
	}

}
