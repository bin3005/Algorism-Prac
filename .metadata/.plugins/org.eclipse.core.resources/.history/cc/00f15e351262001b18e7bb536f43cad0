import java.util.ArrayList;
import java.util.Scanner;

public class BinarySearch2805 {

	public static void main(String[] args) {
		Scanner in = new Scanner(System.in);
		
		int treeNum = in.nextInt();
		int goal = in.nextInt();
		int result = 0 ;
		ArrayList<Integer> treeList = new ArrayList<Integer>();
		
		for(int i = 0 ; i < treeNum ; i++) {
			treeList.add(in.nextInt());
		}
		
		int high = 0;
		for(int i = 0 ; i < treeList.size(); i++) {
			if( treeList.get(i) > high) {
				high = treeList.get(i);
			}
		}
		
		int mid = 0;
		int low = 0 ;
		
		while(true) {
			mid = (high + low) / 2;
			result = 0;
			
			for(int i = 0 ; i < treeList.size(); i++) {
				if(treeList.size()-mid > 0) {
					result += treeList.get(i)-mid;
				}
			}
			
			if(result >= goal) {
				low = mid +1;
			}else {
				high = mid -1;
			}
			
			if(result == goal) {
				break;
			}
		}
		
		System.out.println(maxTree);
	}

}
